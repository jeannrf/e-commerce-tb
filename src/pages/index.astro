---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import Hero from "../components/Hero.astro";
import SectionTitle from "../components/SectionTitle.astro";
import ProductCard from "../components/ProductCard.astro";
import TestimonialCard from "../components/TestimonialCard.astro";
import WhatsAppButton from "../components/WhatsAppButton.astro";
import Footer from "../components/Footer.astro";
import { Heart, Truck, Shield, Award } from "lucide-astro";

import { getProducts, urlFor } from "../lib/sanity";

// Fetch products from Sanity
const allProducts = await getProducts();

// Map Sanity data to our component format
const products = allProducts.map((p: any) => ({
	id: p._id,
	name: p.name,
	price: p.price,
	oldPrice: p.oldPrice,
	category: p.category,
	isNew: p.isNew,
	image: p.image ? urlFor(p.image).url() : null,
	description: p.description,
}));

// Filtrar productos para las secciones
const novedades = products.filter((p: any) => p.isNew).slice(0, 3);
const historica = products
	.filter((p: any) => p.category === "Retro")
	.slice(0, 4);
const accesorios = products
	.filter((p: any) => p.category === "Accesorios")
	.slice(0, 6);

// Testimonios
const testimonios = [
	{
		name: "Carlos Mendoza",
		comment:
			"Excelente calidad y atención. Mi camiseta llegó en perfecto estado y el diseño es increíble. ¡Arriba Alianza!",
		location: "La Victoria, Lima",
	},
	{
		name: "María López",
		comment:
			"Compré para toda la familia y quedamos encantados. Los niños están felices con sus camisetas. Súper recomendado.",
		location: "Surco, Lima",
	},
	{
		name: "Juan Carlos Ríos",
		comment:
			"Hincha de corazón y ahora cliente fiel. La colección retro es espectacular, me trajo muchos recuerdos.",
		location: "Callao",
	},
];
---

<Layout title="Tienda Oficial Blanquiazul">
	<Navbar />
	<main>
		<!-- Hero Section -->
		<Hero />

		<!-- Benefits Bar -->
		<section class="bg-primary py-6">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
				<div class="grid grid-cols-2 lg:grid-cols-4 gap-6">
					<div
						class="flex items-center gap-3 text-white justify-center"
					>
						<Truck class="w-6 h-6 text-accent-gold" />
						<span class="text-sm font-medium"
							>Envío a todo Perú</span
						>
					</div>
					<div
						class="flex items-center gap-3 text-white justify-center"
					>
						<Shield class="w-6 h-6 text-accent-gold" />
						<span class="text-sm font-medium">Compra segura</span>
					</div>
					<div
						class="flex items-center gap-3 text-white justify-center"
					>
						<Award class="w-6 h-6 text-accent-gold" />
						<span class="text-sm font-medium">Calidad premium</span>
					</div>
					<div
						class="flex items-center gap-3 text-white justify-center"
					>
						<Heart class="w-6 h-6 text-accent-gold" />
						<span class="text-sm font-medium">Hecho con pasión</span
						>
					</div>
				</div>
			</div>
		</section>

		<!-- Novedades 2026 -->
		<section id="novedades" class="py-20 lg:py-28">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
				<SectionTitle
					title="La Nueva Piel 2026"
					subtitle="Las camisetas oficiales de la nueva temporada. Viste los colores con orgullo."
				/>

				<div
					class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8"
				>
					{
						novedades.map((producto: any) => (
							<ProductCard {...producto} />
						))
					}
				</div>
			</div>
		</section>

		<!-- Colección Histórica -->
		<section id="historica" class="py-20 lg:py-28 bg-bg-alt">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
				<SectionTitle
					title="Historia y Tradición"
					subtitle="Revive los momentos más gloriosos del club con nuestra colección de ediciones especiales."
				/>

				<div
					class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6"
				>
					{
						historica.map((producto: any) => (
							<ProductCard {...producto} />
						))
					}
				</div>
			</div>
		</section>

		<!-- Accesorios -->
		<section id="accesorios" class="py-20 lg:py-28">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
				<SectionTitle
					title="Lleva el Sentimiento a Todos Lados"
					subtitle="Accesorios para el hincha que vive y respira los colores blanquiazules."
				/>

				<div
					class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-6 gap-4 lg:gap-6"
				>
					{
						accesorios.map((producto: any) => (
							<ProductCard {...producto} />
						))
					}
				</div>
			</div>
		</section>

		<!-- Sobre Nosotros -->
		<section id="nosotros" class="py-20 lg:py-28 bg-bg-alt overflow-hidden">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
				<div class="grid lg:grid-cols-2 gap-12 lg:gap-20 items-center">
					<!-- Image -->
					<div class="animate-on-scroll">
						<div class="relative">
							<div
								class="aspect-[4/3] rounded-3xl overflow-hidden bg-gradient-to-br from-primary to-primary-light shadow-2xl"
							>
								<div
									class="w-full h-full flex items-center justify-center"
								>
									<span
										class="text-white text-8xl font-bold opacity-20"
										>AL</span
									>
								</div>
							</div>
							<!-- Decorative -->
							<div
								class="absolute -bottom-6 -right-6 w-32 h-32 bg-accent-gold/20 rounded-3xl -z-10"
							>
							</div>
							<div
								class="absolute -top-6 -left-6 w-24 h-24 bg-primary/10 rounded-3xl -z-10"
							>
							</div>
						</div>
					</div>

					<!-- Content -->
					<div class="animate-on-scroll">
						<span
							class="text-accent-gold font-semibold uppercase tracking-wider"
							>Nuestra Historia</span
						>
						<h2
							class="text-3xl lg:text-4xl font-extrabold text-text mt-2 mb-6"
						>
							Más que una tienda, <br />
							<span class="gradient-text">somos hinchada</span>
						</h2>
						<p class="text-text-muted text-lg leading-relaxed mb-6">
							Tribuna SVR nace del amor incondicional por Alianza
							Lima. Somos hinchas que entendemos lo que significa
							vestir estos colores: es llevar la historia, la
							pasión y el orgullo de ser blanquiazul.
						</p>
						<p class="text-text-muted text-lg leading-relaxed mb-8">
							Cada prenda que ofrecemos está pensada para el
							hincha que deja todo en la tribuna. Calidad premium,
							diseños exclusivos y el sentimiento de pertenecer a
							la familia más grande del Perú.
						</p>
						<div class="flex items-center gap-4">
							<div
								class="w-1 h-16 bg-gradient-to-b from-primary to-accent-gold rounded-full"
							>
							</div>
							<blockquote class="italic text-text">
								"Arriba Alianza toda la vida, <br />
								<span class="font-bold"
									>blanquiazul hasta morir."</span
								>
							</blockquote>
						</div>
					</div>
				</div>
			</div>
		</section>

		<!-- Testimonios -->
		<section id="testimonios" class="py-20 lg:py-28">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
				<SectionTitle
					title="Lo que dicen nuestros hinchas"
					subtitle="La satisfacción de nuestra hinchada es nuestro mayor trofeo."
				/>

				<div
					class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8"
				>
					{
						testimonios.map((testimonio) => (
							<TestimonialCard {...testimonio} />
						))
					}
				</div>
			</div>
		</section>

		<!-- CTA Final -->
		<section
			class="py-20 lg:py-28 bg-gradient-to-br from-primary to-primary-dark text-white"
		>
			<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
				<div class="animate-on-scroll">
					<h2 class="text-3xl lg:text-5xl font-extrabold mb-6">
						¿Listo para vestir la gloria?
					</h2>
					<p class="text-xl text-white/80 mb-8 max-w-2xl mx-auto">
						Únete a miles de hinchas que ya visten con orgullo los
						colores blanquiazules. Contáctanos y encuentra tu prenda
						perfecta.
					</p>
					<a
						href="https://wa.me/51982089087?text=Hola%20Tribuna%20SVR!%20Quiero%20hacer%20un%20pedido."
						target="_blank"
						rel="noopener noreferrer"
						class="btn-primary inline-flex items-center gap-3 bg-accent-gold text-primary-dark px-10 py-5 rounded-xl font-bold text-lg hover:bg-white transition-colors"
					>
						<svg
							class="w-6 h-6"
							fill="currentColor"
							viewBox="0 0 24 24"
						>
							<path
								d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"
							></path>
						</svg>
						Escribir por WhatsApp
					</a>
				</div>
			</div>
		</section>
	</main>

	<Footer />
	<WhatsAppButton />
</Layout>
