---
import { MessageCircle } from "lucide-astro";

const whatsappLink =
  "https://wa.me/51982089087?text=Hola%20Tribuna%20SVR!%20Me%20interesa%20conocer%20más%20sobre%20sus%20productos.";
---

<a
  href={whatsappLink}
  target="_blank"
  rel="noopener noreferrer"
  class="fixed bottom-6 right-6 z-50 group"
  aria-label="Contactar por WhatsApp"
>
  <div class="relative">
    <!-- Pulse Ring -->
    <div
      class="absolute inset-0 bg-green-500 rounded-full animate-ping opacity-25"
    >
    </div>

    <!-- Button -->
    <div
      class="relative w-14 h-14 bg-green-500 rounded-full flex items-center justify-center shadow-lg hover:bg-green-600 hover:scale-110 transition-all group-hover:shadow-2xl"
    >
      <MessageCircle class="w-7 h-7 text-white" />
    </div>

    <!-- Tooltip -->
    <div
      class="absolute bottom-full right-0 mb-2 px-4 py-2 bg-text text-white text-sm rounded-lg opacity-0 group-hover:opacity-100 transition-opacity whitespace-nowrap pointer-events-none"
    >
      ¡Escríbenos por WhatsApp!
      <div
        class="absolute top-full right-4 border-4 border-transparent border-t-text"
      >
      </div>
    </div>
  </div>
</a>
